---
export interface Props {
  faviconSrc?: string | null;
}

const { faviconSrc } = Astro.props;

import favIcon from '~/assets/favicons/favicon.ico';
import favIconSvg from '~/assets/favicons/favicon.svg';
import appleTouchIcon from '~/assets/favicons/apple-touch-icon.png';

// Use tenant favicon if provided, otherwise use default
const favicon = faviconSrc || favIcon;
const faviconSvgUrl = faviconSrc || favIconSvg.src;
const appleTouchIconUrl = faviconSrc || appleTouchIcon.src;
---

<link rel="shortcut icon" href={favicon} />
<link rel="icon" type="image/svg+xml" href={faviconSvgUrl} />
<link rel="mask-icon" href={faviconSvgUrl} color="#8D46E7" />
<link rel="apple-touch-icon" sizes="180x180" href={appleTouchIconUrl} />

---
import { Background } from '@/components/background';
import DefaultLayout from '@/layouts/DefaultLayout.astro';

const base = (import.meta.env.BASE_URL || '/').replace(/\/$/, '');
---

<DefaultLayout title="Thank you" description="Thanks — we’ve received your message.">
  <Background>
    <div class="container py-28 lg:pt-44 lg:pb-32">
      <div class="mx-auto max-w-2xl rounded-2xl border bg-card p-8 shadow-sm">
        <p class="text-xs font-semibold tracking-[0.22em] uppercase text-muted-foreground">Thank you</p>
        <h1 class="mt-3 text-3xl md:text-4xl font-bold tracking-tight">We’ve received your message.</h1>
        <p class="mt-3 text-muted-foreground">We’ll get back to you shortly with next steps.</p>
        <div class="mt-8">
          <a
            href={`${base}/`}
            class="inline-flex items-center rounded-xl border border-border px-4 py-2 text-sm hover:bg-muted"
          >
            Back to home
          </a>
        </div>
      </div>
    </div>
  </Background>
</DefaultLayout>

---
import { BlogPost } from '@/components/blocks/blog-post';
import DefaultLayout from '@/layouts/DefaultLayout.astro';

const tenantId = Astro.request.headers.get('x-tenant-id') || Astro.url.searchParams.get('tenantId') || '';
const baseUrl = new URL(Astro.request.url);

const raw = Astro.params.slug;
const slug = Array.isArray(raw) ? raw.join('/') : raw;

const res = await fetch(
  new URL(`/api/v1/blog/posts/${encodeURIComponent(slug)}?tenantId=${encodeURIComponent(tenantId)}`, baseUrl),
  {
    headers: tenantId ? { 'X-Tenant-Id': tenantId } : undefined,
  }
);

if (res.status === 404) {
  throw new Error('Post not found');
}

const json = await res.json();
const post = json?.data;

const contentHtml = post?.content || '';

---
<DefaultLayout title={post?.title || 'Blog'} description={post?.excerpt || ''}>
	<div class="py-28 lg:pt-44 lg:pb-32">
		<BlogPost post={post} client:only='react'>
			<div set:html={contentHtml} />
		</BlogPost>
	</div>
</DefaultLayout>
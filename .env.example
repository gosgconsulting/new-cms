# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Forced Tenant (optional - locks app to single tenant)
# When set, tenant switcher and Tenants page will be hidden
# VITE_FORCED_TENANT_ID=tenant-gosg

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Alternative database configuration
# DATABASE_PUBLIC_URL=postgresql://username:password@hostname:port/database

# Frontend API Configuration (optional - defaults to relative path)
# VITE_API_BASE_URL=

# Backend Server Configuration
PORT=4173
NODE_ENV=development

# SMTP Configuration (REQUIRED for email functionality)
RESEND_API_KEY=your_resend_api_key_here
SMTP_FROM_EMAIL=noreply@gosg.com

# Optional: Individual PostgreSQL variables (use DATABASE_URL instead)
# POSTGRES_DB=your_database_name
# POSTGRES_USER=your_username
# POSTGRES_PASSWORD=your_password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# Optional: API Keys for integrations (not used in main app)
# VITE_OPENROUTER_API_KEY=your_openrouter_key
# VITE_GOOGLE_API_KEY=your_google_key
# VITE_RESEND_API_KEY=your_resend_key

# Google cloud translation api key
GOOGLE_CLOUD_TRANSLATION_API_KEY=YOUR_GOOGLE_API_KEY

# Stripe Configuration (REQUIRED for shop payments and Stripe Connect)
# Get your API keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Frontend URL (REQUIRED for Stripe Connect redirects)
# Set this to your actual frontend URL (e.g., https://yourdomain.com or http://localhost:5173)
FRONTEND_URL=http://localhost:5173

# Vercel serverless (optional â€“ for Vercel deployment)
# File uploads use Vercel Blob when set; otherwise disk (public/uploads/)
# Never commit BLOB_READ_WRITE_TOKEN; set only in Vercel env or .env
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxx
# Theme assets: after running npm run upload:theme-assets, set the printed URL here and in Vercel
# BLOB_THEME_MANIFEST_URL=https://xxx.public.blob.vercel-storage.com/theme-manifest.json
# CMS-only deploy: set to 1 to exclude /theme from deployment (theme served from Blob only)
# EXCLUDE_THEME_FROM_DEPLOYMENT=1
# Lower pool size for serverless to avoid exhausting DB connections (default 20)
# DATABASE_POOL_MAX=5
